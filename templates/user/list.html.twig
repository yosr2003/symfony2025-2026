{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
<h1>All Users</h1>

<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>
                <a href="{{ path('user_show', {id: user.id}) }}">Show</a> |
                <a href="{{ path('user_edit', {id: user.id}) }}">Edit</a> |
                <a href="{{ path('user_delete', {id: user.id}) }}">Delete</a>
            </td>
        </tr>
    {% endfor %}
</table>

<a href="{{ path('user_add') }}">Add new user</a>
{% endblock %}
